{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["node", "stack-utils"] // Add this line
  },
  "compileOnSave": true,
  "include": ["src", "functions", "types", "src/index.ts"],
  "exclude": ["node_modules"]
}
